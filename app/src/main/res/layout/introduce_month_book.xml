<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background6"
    tools:context=".IntroduceMonthBook">

    <!--상단바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back_btn" />

        <ImageView
            android:id="@+id/logoBook"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="3"
            android:src="@drawable/logo_book" />

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/home_btn" />
    </LinearLayout>
    <!--갤러리뷰 넣기-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Gallery
            android:id="@+id/galleryBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spacing="5dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="* 아래 이미지를 클릭하면 책에 대한 상세한 정보를 확인하실 수 있습니다"
            android:textColor="#262C4A"/>

        <ImageView
            android:id="@+id/showBook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp" />
    </LinearLayout>
</LinearLayout>